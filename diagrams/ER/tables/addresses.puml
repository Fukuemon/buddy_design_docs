@startuml entity-relationship-diagram
skinparam linetype ortho

package 施設情報 {
  entity facilities
}

package 住所 {
  entity addresses {
    * binary address_id <<PK>>
    --
    int zip_code "郵便番号"
    string address "住所"
    bi area_id <<FK>> "地域エリアID"
  }
}

package エリア {
  entity areas {
    * binary id <<PK>>
    --
    string area_code "地域エリア名"
    binary facility_id <<FK>> "施設ID"
  }
}

addresses }o--|| areas
areas }o--|| facilities


@enduml